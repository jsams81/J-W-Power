<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns	= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id			= "com.Synapse.jwpower"
	version 	= "1.0.0">
	
	<preference name="phonegap-version" value="1.7.0" />

	<name>J-W Power</name>

	<description>
		iPhone app for accessing J-W Power's compressor calculator and contacts
	</description>

	<author href="http://www.synapsewebsite.com"
		email="jason@synapse.ws">
		Jason Sams
	</author>
	
	<preference name="ios-statusbarstyle" value="black-opaque" />
	
	<preference name="target-device" value="handset" />

	<icon src="icon.png" />
	<icon src="icon.png" width="57" height="57" />
	<icon src="icon_at_2x.png" width="114" height="114" />
	
	<gap:splash src="splash.png" />	
	<gap:splash src="splash.png" width="320" height="480" />
	<gap:splash src="splash_at_2x.png" width="640" height="960" />

	<preference name="orientation" value="portrait" />
</widget>
